<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff616161">
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linearLayout1"
        android:background="#ffa1887f"
        android:layout_margin="10dp">
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:id="@+id/linearLayout2"
            android:background="#ff311b92"
            android:layout_margin="10dp"
            android:gravity="center">
            <TextView
                android:text="@string/app_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/textView1"
                android:gravity="center"
                android:textColor="#ffffffff"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_margin="10dp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="169.0dp"
            android:id="@+id/linearLayout3"
            android:background="#ff757575"
            android:gravity="center"
            android:layout_margin="20dp"
            android:padding="10dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/username"
                android:background="#ffffffff"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_margin="10dp"
                android:hint="@string/Username"
                android:gravity="center"
                android:padding="10dp"
                android:textColorHint="#ff9e9e9e" />
            <EditText
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/password"
                android:background="#ffffffff"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_margin="10dp"
                android:hint="@string/password"
                android:textColorHint="#ff9e9e9e"
                android:gravity="center" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/linearLayout4"
            android:background="#ff9e9e9e"
            android:gravity="center"
            android:layout_margin="12dp">
            <Button
                android:text="@string/login"
                android:layout_width="92.0dp"
                android:layout_height="97.0dp"
                android:id="@+id/login"
                android:backgroundTint="#ff1a237e"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_margin="10dp" />
            <Button
                android:text="@string/clear"
                android:layout_width="92.0dp"
                android:layout_height="97.0dp"
                android:id="@+id/clear"
                android:backgroundTint="#ff1a237e"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_margin="10dp" />
            <Button
                android:text="@string/close"
                android:layout_width="92.0dp"
                android:layout_height="97.0dp"
                android:id="@+id/close"
                android:backgroundTint="#ff1a237e"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_margin="10dp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>